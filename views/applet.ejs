
<style>
    .desktop-app{
        border: solid transparent;
        background-color: transparent;
    }
</style>
<button id="<%= name %>" class="desktop-app"><img src="<%= icon %>"  style="width:20pt; height:20pt;"/> <p><%= name %></p></button>
<script>
    var link = '<%= link %>';
    var app = document.getElementById('<%= name %>');
    console.log(app);

    app.ondblclick = function(){
        if(window.parent.document.getElementById("<%= name %>") == null){
            var frame = window.parent.document.createElement('iframe');
            frame.id = "<%= name %>"
            frame.setAttribute('src', link + "/?name=<%=name%>&icon=<%=icon%>");
            frame.setAttribute('style', 'position:relative; top:100; left:100; height:900px; width:1600px;');
            frame.setAttribute('class', 'window');
            window.parent.document.body.appendChild(frame);
        }
    };

</script>